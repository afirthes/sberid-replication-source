{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "required": [
  ],
  "properties": {
    "fluentBit": {
      "description": "Настройки fluentBit сайдкара",
      "type": "object",
      "properties": {
        "disabled": {
          "description": "Признак отключения fluentbit",
          "type": "string",
          "enum": [
            "true",
            "false"
          ]
        },
        "flush": {
          "type": "number",
          "description": "Периодичность отправки логов"
        },
        "logLevel": {
          "description": "Уровень логирования",
          "type": "string",
          "enum": [
            "off",
            "error",
            "warn",
            "info",
            "debug",
            "trace"
          ]
        },
        "disableHealthCheck": {
          "description": "Выключен ли healchCheck и пробы",
          "type": "string",
          "enum": [
            "true",
            "false"
          ]
        },
        "memBufLimit": {
          "type": "string",
          "description": "Максимальное количество памяти для обработки логов"
        },
        "bufferMaxSize": {
          "type": "string",
          "description": "Максимальный размер буфера"
        },
        "rotateWait": {
          "type": "number",
          "description": "Дополнительное ожидание дозаписи в файлы логов после их ротации"
        },
        "refreshInterval": {
          "type": "number",
          "description": "Интервал обновления списка читаемых файлов"
        },
        "stdout": {
          "description": "Вывод логов в stdout",
          "type": "string",
          "enum": [
            "true",
            "false"
          ]
        },
        "http": {
          "description": "Параметры отправки логов по http",
          "type": "object",
          "required": [
            "host",
            "port"
          ],
          "properties": {
            "host": {
              "type": "string"
            },
            "port": {
              "type": "number"
            },
            "uri": {
              "type": "string"
            },
            "tls": {
              "description": "Настройки ssl соединения",
              "type": "object",
              "additionalProperties": false,
              "required": [
                "enabled"
              ],
              "properties": {
                "enabled": {
                  "description": "Включен ли tls",
                  "type": "string",
                  "enum": [
                    "true",
                    "false"
                  ]
                },
                "debug": {
                  "description": "Уровень логирования tls. 0 (No debug), 1 (Error), 2 (State change), 3 (Informational) and 4 Verbose",
                  "type": "number",
                  "enum": [
                    0,
                    1,
                    2,
                    3,
                    4
                  ]
                },
                "verify": {
                  "description": "Включение проверки сертификата",
                  "type": "string",
                  "enum": [
                    "true",
                    "false"
                  ]
                },
                "caFile": {
                  "description": "Путь до доверенной цепочки",
                  "type": "string"
                },
                "crtFile": {
                  "description": "Путь до клиентского сертификата для mTLS",
                  "type": "string"
                },
                "keyFile": {
                  "description": "Путь до приватного ключа клиентского сертификата для mTLS",
                  "type": "string"
                }
              }
            }
          }
        },
        "deploy": {
          "description": "Параметры деплоя сайдкара",
          "type": "object",
          "properties": {
            "resources": {
              "$ref": "#/$defs/resources"
            },
            "readiness": {
              "$ref": "#/$defs/probe"
            }
          }
        }
      }
    }
  },
  "$defs": {
    "resources": {
      "description": "Параметры ресурсов для контейнера приложения",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "limitsCpu": {
          "type": "string"
        },
        "limitsMemory": {
          "type": "string"
        },
        "requestsCpu": {
          "type": "string"
        },
        "requestsMemory": {
          "type": "string"
        }
      }
    },
    "probe": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "initialDelaySeconds": {
          "type": "number"
        },
        "timeoutSeconds": {
          "type": "number"
        },
        "periodSeconds": {
          "type": "number"
        },
        "successThreshold": {
          "type": "number"
        },
        "failureThreshold": {
          "type": "number"
        }
      }
    }
  }
}