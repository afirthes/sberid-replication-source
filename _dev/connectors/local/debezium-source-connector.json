{
  "connector.class": "io.debezium.connector.postgresql.PostgresConnector",
  "tasks.max": "1",
  "database.hostname": "host.docker.internal",
  "database.port": "5432",
  "database.user": "idp",
  "database.password": "idp",
  "database.server.id": "100001",
  "database.server.name": "idpdb",
  "database.dbname": "idp",
  "table.include.list": "public.customers",
  "publication.name": "debezium_publication",
  "plugin.name": "pgoutput",
  "slot.name": "debezium",
  "snapshot.mode": "initial",
  "decimal.handling.mode": "precise",
  "time.precision.mode": "connect",

  "key.converter":"org.apache.kafka.connect.json.JsonConverter",
  "key.converter.schemas.enable":"true",
  "value.converter":"org.apache.kafka.connect.json.JsonConverter",
  "value.converter.schemas.enable":"true",

  "transforms":"removeSchema",
  "transforms.removeSchema.type":"io.debezium.transforms.ByLogicalTableRouter",
  "transforms.removeSchema.topic.regex":"(.*)[.](.*)[.](.*)",
  "transforms.removeSchema.topic.replacement":"$1.$3",

  "topic.transaction": "transaction",
  "provide.transaction.metadata": "true"
}