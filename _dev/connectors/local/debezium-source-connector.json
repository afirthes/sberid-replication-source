{
  "connector.class": "io.debezium.connector.postgresql.PostgresConnector",
  "tasks.max": "1",
  "database.hostname": "host.docker.internal",
  "database.port": "5432",
  "database.user": "idp",
  "database.password": "idp",
  "database.server.id": "100001",
  "database.server.name": "idpdb",
  "database.dbname": "idp",
  "table.include.list": "public.table_a,public.table_b,public.table_c",
  "publication.name": "debezium_publication",
  "plugin.name": "pgoutput",
  "slot.name": "debezium",
  "snapshot.mode": "initial",
  "decimal.handling.mode": "precise",
  "time.precision.mode": "connect",

  "publication.autocreate.mode": "filtered",
  "snapshot.lock.timeout.ms": 10000,
  "max.queue.size": 20240,
  "max.batch.size": 10240,
  "poll.interval.ms": 1000,
  "snapshot.fetch.size": 10240,

  "key.converter":"org.apache.kafka.connect.json.JsonConverter",
  "key.converter.schemas.enable":"true",
  "value.converter":"org.apache.kafka.connect.json.JsonConverter",
  "value.converter.schemas.enable":"true",

  "transforms":"removeSchema",
  "transforms.removeSchema.type":"io.debezium.transforms.ByLogicalTableRouter",
  "transforms.removeSchema.topic.regex":"(.*)[.](.*)[.](.*)",
  "transforms.removeSchema.topic.replacement":"$1.$3",

  "provide.transaction.metadata": "true",
  "topic.prefix": "idpdb",

  "topic.creation.enable":true,
  "topic.creation.groups": "idpdb,transaction",

  "topic.creation.idpdb.include":"idpdb\\.*",
  "topic.creation.default.partitions":1,
  "topic.creation.default.replication.factor":1,

  "topic.creation.idpdb.exclude":"idpdb\\.transaction",
  "topic.creation.idpdb.partitions":1,
  "topic.creation.idpdb.cleanup.policy":"compact",

  "topic.creation.transaction.include":"idpdb\\.transaction",
  "topic.creation.transaction.partitions":1,
  "topic.creation.transaction.cleanup.policy":"compact"


}